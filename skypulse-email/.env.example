# SkyPulse 2.0 Configuration

# Email Service (IMAP - for receiving promotional emails)
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993
IMAP_EMAIL=your-email@gmail.com
IMAP_PASSWORD=your-app-password

# Email Service (SMTP - for sending notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Subscription Email
SUBSCRIBE_EMAIL=subscribe@skypulse.com

# Database
DATABASE_URL=sqlite:///./skypulse.db

# AI/LLM
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Groq API (optional, for complex tasks)
GROQ_API_KEY=your-groq-api-key
GROQ_MODEL=llama-3.1-70b-versatile

# Together.ai (optional fallback)
TOGETHER_API_KEY=your-together-api-key

# Scheduler
CHECK_EMAIL_INTERVAL_MINUTES=30

# Logging
LOG_LEVEL=INFO
